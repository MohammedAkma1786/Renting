{
  "version": 3,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "handle": "error"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "settings": {
    "framework": "vite",
    "devCommand": "vite",
    "installCommand": "npm install",
    "buildCommand": "npm run build",
    "outputDirectory": "dist",
    "rootDirectory": "client",
    "nodeVersion": "22.x"
  }
}
